@model List<MVC_Practice1.Models.Urun>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ürün Listesi</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <h1>Ürünler</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>İsim</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price TL</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

